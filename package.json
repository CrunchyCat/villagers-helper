{
  "name": "vilrs",
  "version": "0.3.2",
  "description": "A helpful tool for the villagers game, created by Haakon Gaarder. (Deployed with GH Pages)",
  "homepage": "https://www.vilrs.com",
  "private": true,
  "dependencies": {
    "@craco/craco": "7.0.0-alpha.7",
    "@reduxjs/toolkit": "1.8.5",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.3.0",
    "@types/fontfaceobserver": "2.1.0",
    "@types/jest": "27.4.1",
    "@types/node": "^18.7.14",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@types/react-redux": "7.1.24",
    "@types/react-router-dom": "5.3.3",
    "@types/react-test-renderer": "18.0.0",
    "@types/rimraf": "3.0.2",
    "@types/shelljs": "0.8.11",
    "@types/styled-components": "5.1.26",
    "@types/testing-library__jest-dom": "5.14.5",
    "@types/webpack": "5.28.0",
    "@types/webpack-env": "1.18.0",
    "chalk": "4.1.2",
    "cross-env": "~7.0.3",
    "eslint": "npm:^8.3.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "fontfaceobserver": "2.3.0",
    "gh-pages": "~4.0.0",
    "husky": "~8.0.1",
    "i18next": "21.9.1",
    "i18next-browser-languagedetector": "6.1.5",
    "i18next-scanner": "4.0.0",
    "inquirer": "^7.3.3",
    "inquirer-directory": "2.2.0",
    "jest": "27.5.1",
    "jest-styled-components": "7.1.0",
    "lint-staged": "13.0.3",
    "node-plop": "0.26.3",
    "plop": "2.7.6",
    "preact": "^10.10.6",
    "prettier": "~2.7.1",
    "react": "18.2.0",
    "react-app-polyfill": "3.0.0",
    "react-dom": "18.2.0",
    "react-helmet-async": "1.3.0",
    "react-i18next": "11.18.4",
    "react-is": "18.2.0",
    "react-redux": "7.2.8",
    "react-router-dom": "6.3.0",
    "react-scripts": "5.0.1",
    "react-test-renderer": "18.2.0",
    "redux-injectors": "1.3.0",
    "redux-saga": "1.2.1",
    "rimraf": "~3.0.2",
    "sanitize.css": "~13.0.0",
    "shelljs": "~0.8.5",
    "styled-components": "5.3.5",
    "stylelint": "14.11.0",
    "stylelint-config-recommended": "9.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "ts-node": "~10.9.1",
    "typescript": "~4.7.4"
  },
  "scripts": {
    "preinstall": "npm i yarn -g && npm i typescript -g && npm i ts-node -g && npm i @types/node@^18 -g && npm i serve -g",
    "start": "craco start",
    "start:prod": "yarn run build && serve -s build",
    "build": "craco build",
    "deploy": "gh-pages -b master -d build",
    "test": "craco test",
    "test:generators": "ts-node ./internals/testing/generators/test-generators.ts",
    "eject": "react-scripts eject",
    "checkTs": "tsc --noEmit",
    "eslint": "eslint --ext js,ts,tsx",
    "lint": "yarn run eslint src",
    "lint:fix": "yarn run eslint --fix src",
    "lint:css": "stylelint src/**/*.css",
    "generate": "plop --plopfile internals/generators/plopfile.ts",
    "prettify": "prettier --write",
    "extract-messages": "i18next-scanner --config=internals/extractMessages/i18next-scanner.config.js",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">.96%",
      "firefox >= 102",
      "chrome >=83",
      "opera >= 69",
      "edge >=83",
      "safari >=14",
      "and_chr >=83",
      "samsung >=13",
      "ios_saf >=14"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.x"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*/*.d.ts",
      "!src/**/*/Loadable.{js,jsx,ts,tsx}",
      "!src/**/*/messages.ts",
      "!src/**/*/types.ts",
      "!src/index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "packageManager": "yarn@3.2.2"
}
